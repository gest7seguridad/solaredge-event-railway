# CONFIGURACIÓN DE PRODUCCIÓN - EVENT SYSTEM
# Copia este archivo a .env y configura los valores según tu entorno

# Configuración del servidor
NODE_ENV=production
PORT=3000

# Base de datos PostgreSQL
DB_HOST=server.radioinsular.es
DB_PORT=5432
DB_NAME=eventos_n
DB_USER=eventos_u
DB_PASSWORD=eventos_pass

# JWT Secret - CAMBIA ESTO EN PRODUCCIÓN
JWT_SECRET=SolarLand2025ProductionToken!@#$%^&*()_+SecureKey

# URL del frontend (para CORS)
FRONTEND_URL=https://solarland.gestsiete.es

# Configuración de correo SMTP (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password
SMTP_FROM=noreply@solarland.com

# Configuración de archivos subidos (opcional)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Configuración de seguridad
CORS_ORIGINS=https://solarland.gestsiete.es,https://www.solarland.com
SESSION_SECRET=cambiar-esto-en-produccion-123456789
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=/var/log/event-system/app.log

# Configuración de caché (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de backup (opcional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_PATH=/var/backups/event-system

# Configuración de monitoreo (opcional)
MONITORING_ENABLED=false
MONITORING_ENDPOINT=/health
MONITORING_KEY=cambiar-esto-en-produccion