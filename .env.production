# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# Para solarland.gestsiete.es
# ============================================

# Entorno
NODE_ENV=production
PORT=3000

# ============================================
# BASE DE DATOS REMOTA - GESTSIETE.ES
# ============================================
DB_HOST=gestsiete.es
DB_PORT=5432
DB_USER=events_u
DB_PASSWORD=events_pass$$
DB_NAME=events_n

# ============================================
# SEGURIDAD - JWT
# ============================================
JWT_SECRET=SolarLand2025ProductionToken!@#$%^&*()_+SecureKey
JWT_EXPIRES_IN=24h

# ============================================
# CONFIGURACIÓN SMTP (Email)
# ============================================
# Configurar con los datos reales del servidor SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion
EMAIL_FROM="SolarEdge Event" <noreply@solarland.gestsiete.es>

# ============================================
# URLS DE LA APLICACIÓN - PRODUCCIÓN
# ============================================
FRONTEND_URL=https://solarland.gestsiete.es
BACKEND_URL=https://solarland.gestsiete.es

# ============================================
# RATE LIMITING (Seguridad)
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100